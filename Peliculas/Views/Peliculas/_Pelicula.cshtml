@model Peliculas.Models.Pelicula

<div class="form-group">
    <label>Título</label>
    @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
</div>

<div class="form-group">
    <label>Director</label>
    @Html.EditorFor(model => model.Director, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.Director, "", new { @class = "text-danger" })
</div>

<div class="form-group">
    <label>Fecha Publicación</label>
    @Html.EditorFor(model => model.FechaPublicacion, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.FechaPublicacion, "", new { @class = "text-danger" })
</div>

<div class="form-group">
    <label>Categoría</label>
    @Html.DropDownList("CategoriaId", null, htmlAttributes: new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.CategoriaId, "", new { @class = "text-danger" })
</div>

<hr />
<div class="form-group">
    <input type="submit" value="Guardar" class="btn btn-primary" />
    @Html.ActionLink("Volver", "Listar", "Peliculas", new { }, new { @class = "btn btn-success" })
</div>

@section Scripts {

    <script type="text/javascript">

        $(function () {
            $(".datefield").datepicker({
                dateFormat: 'dd/mm/yyyy',
                showOn: "button"
            });
        });

    </script>
}